

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.android.groupproject.MainActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/launch_camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="left"
        android:text="@string/launch_camera" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quarter" />

            <TextView
                android:id="@+id/quarter_text"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="Quarter:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/quarter_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/init_count"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="24dp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dime" />
       
            <TextView
                android:id="@+id/dime_text"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="@string/dime"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/dime_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/init_count"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="24dp" />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nickel" />
            
            <TextView
                android:id="@+id/nickle_text"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="@string/nickle"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/nickle_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/init_count"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="24dp" />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/penny" />

            <TextView
                android:id="@+id/penny_text"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="@string/penny"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/penny_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/init_count"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="24dp" />
            
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="470dp"
        android:layout_height="wrap_content"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/init_total"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/reset"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By: Team Group Squad"
        android:textColor="#A9A9A9" />

</LinearLayout>
